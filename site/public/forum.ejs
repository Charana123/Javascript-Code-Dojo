<% forum_data.forEach(function(user){ %>
  <div class="sidebar">
    <ul>
      <li id="question-title"> <%= user.title %> </li>
      <li id="question-category"> <%= user.category %> </li>
      <li id="question-comments"> <%= user.comments %> </li>
      <li id="question-views"> <%= user.views %> </li>
      <li id="question-activity"> <%= user.activity %> </li>
    </ul>
  </div>
<% }) %>

<script type="text/javascript">
  var category_select = document.getElementById("category-select")
  category_select.onchange = function(){
    location.href = "/" + category_select.options[category_select.selectedIndex].value;
  }
</script>


